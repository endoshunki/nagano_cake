<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :last_name, "　名前　　　　" %>
    <%= f.label :last_name, "　　　(姓)" %>
    <%= f.email_field :last_name %>
    <%= f.label :first_name, "　(名)" %>
    <%= f.email_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana, "　フリガナ　　　　" %>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.email_field :last_name_kana %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.email_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "　メールアドレス　　　　" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code, "　郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address, "　住所　　　　　　　　　" %>
    <%= f.text_field :address %>
  </div>


  <div class="field">
    <%= f.label :password, "　パスワード(6文字以上)　" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "　パスワード(確認用)　　"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions ml-3">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p class ="ml-3">既に登録済みの方</p>

<p class ="ml-3"><a href = "/customers/sign_in">こちら</a>からログインしてください。</p>
