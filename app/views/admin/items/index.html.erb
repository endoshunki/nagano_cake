<h5 class = "m-3">商品一覧</h5>
<%= link_to new_admin_item_path do %>
<p class= "m-3">new</p>
<% end %>
<table class = "m-3">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |i| %>
    <tr>
      <td><%= i.id %></td>
      <td><%= link_to admin_item_path(i.id) do %><%= i.name %><% end %></td>
      <td><%= i.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @item %>