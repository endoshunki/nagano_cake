<h2>新規商品登録</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model: @items, url: admin_items_path do |f| %>
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
      <td></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
      <td></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
      <td></td>
    </tr>
    <tr>
      <td>販売価格</td>
      <td><%= f.text_field :price %>円</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "新規登録" %></td>
      <td></td>
    </tr>
  </tbody>
  <% end %>
</table>